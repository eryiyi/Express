<?xml version="1.0" encoding="utf-8"?>
<!-- “属性” 布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_image" />

        <TextView
            android:id="@+id/tmc1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/image"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="名称"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tmc6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:drawableLeft="@drawable/icon_dollar"
            android:gravity="center"
            android:text="content"
            android:drawablePadding="4dip"
            android:textColor="@color/android_red"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tmc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tmc1"
            android:layout_below="@id/tmc1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="content"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tmc4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/icon_tip"
        android:drawablePadding="5dip"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="tmc4"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tmc5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dip"
        android:drawableLeft="@drawable/icon_flag"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="content"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_14" />

</LinearLayout>